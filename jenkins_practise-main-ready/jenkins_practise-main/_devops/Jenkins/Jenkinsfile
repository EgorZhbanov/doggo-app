pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps { checkout([$class: 'GitSCM',
          userRemoteConfigs: [[url: 'https://github.com/EgorZhbanov/doggo-app.git'
                              ]],
                              branches: [[name: 'main']]
        ])
    }
    }
    stage('build and deploy'){ 
      steps {
        sh 'pwd'
        sh 'ls'
        sh 'cp Dockerfile ./_devops/docker-compose'
        sh 'docker-compose -f ./_devops/docker-compose/docker-compose.yml down || true'
        sh 'docker-compose -f ./_devops/docker-compose/docker-compose.yml up -d'
      }
    }
  }
      post {
        always {
            cleanWs()
        }
    } 
}
