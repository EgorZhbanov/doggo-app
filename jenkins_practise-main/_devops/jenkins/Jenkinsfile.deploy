pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main',
                url: 'https://github.com/EgorZhbanov/doggo-app'
            }
        }
        stage('Deploy Services') {
            steps {
                dir('_devops/docker-compose') {
                    sh 'docker compose up --build -d'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
